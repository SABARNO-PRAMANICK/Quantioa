# =============================================================================
# Quantioa AI Trading Platform - Environment Variables
# =============================================================================

# --- Upstox Broker API ---
UPSTOX_API_KEY=your_upstox_api_key
UPSTOX_API_SECRET=your_upstox_api_secret
UPSTOX_REDIRECT_URI=http://localhost:8000/api/v1/oauth/upstox/callback

# --- Zerodha Broker API ---
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_API_SECRET=your_zerodha_api_secret
ZERODHA_REDIRECT_URI=http://localhost:8000/api/v1/oauth/zerodha/callback

# --- OpenRouter (Kimi K2.5 + Perplexity) ---
OPENROUTER_API_KEY=your_openrouter_api_key

# --- Database ---
POSTGRES_PASSWORD=<your-postgres-password>
POSTGRES_URL=postgresql://quantioa:<your-postgres-password>@localhost:5432/quantioa

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Kafka ---
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# --- JWT Auth ---
JWT_SECRET_KEY=<generate-with-openssl-rand-hex-32>
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# --- Trading Parameters ---
DEFAULT_STOP_LOSS_PCT=2.0
DEFAULT_KELLY_FRACTION=0.25
MAX_DAILY_LOSS_PCT=2.0
MAX_WEEKLY_DRAWDOWN_PCT=5.0

# --- Environment ---
ENV=development
LOG_LEVEL=INFO
